<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fabric_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

     android:background="@drawable/lastdres"

    tools:context="com.example.admin.quizapp.Fabric_Activity">
    <include android:id="@+id/toobar"
        layout="@layout/toolbar"
        />
    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnChoice2"
        android:layout_above="@+id/btnChoice3"
        android:layout_marginBottom="23dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        android:background="@color/colorButton" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnChoice1"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/btnChoice4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:background="@color/colorButton" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnChoice4"
        android:layout_above="@+id/btnChoice2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp"
        android:onClick="onClick"
        android:background="@color/colorButton" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tvQuestion"
        android:layout_alignEnd="@+id/tvQuestion"
        android:id="@+id/tvScoreView" />

    <TextView
        android:text="TextView"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvQuestion"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/toobar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pbFabric"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/toobar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnChoice3"
        android:layout_marginBottom="25dp"
        android:onClick="onClick"

        android:layout_above="@+id/tvScoreView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorButton" />


</RelativeLayout>
