<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_make_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lastmakeup"
    tools:context="com.example.admin.quizapp.MakeUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <include android:id="@+id/toobar"
        layout="@layout/toolbar"
        />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn3Choice3"
        android:layout_marginBottom="42dp"
        android:onClick="on3Click"
        android:textColor="#ffdd99"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#87996600" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tvQuestion"
        android:layout_alignEnd="@+id/tv3Question"
        android:id="@+id/tv3coreView" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn3Choice2"
        android:layout_marginBottom="28dp"
        android:onClick="on3Click"
        android:textColor="#ffdd99"
        android:layout_above="@+id/btn3Choice3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#87996600" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn3Choice4"
        android:layout_marginBottom="27dp"
        android:onClick="on3Click"
        android:textColor="#ffdd99"
        android:layout_above="@+id/btn3Choice2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#87996600" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn3Choice1"
        android:layout_marginBottom="26dp"
        android:textColor="#ffdd99"
        android:onClick="on3Click"
        android:layout_above="@+id/btn3Choice4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#73996600" />

    <TextView
        android:text="TextView"

        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#fff7e6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv3Question"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/toobar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/pbMakeup"
        android:layout_below="@+id/toobar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
